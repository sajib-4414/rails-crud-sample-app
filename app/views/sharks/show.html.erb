<p style="color: green"><%= notice %></p>

<%= render @shark %>
<h2>Posts</h2>
<% for post in @shark.posts %>
    <ul>
      <li><%= post.body %></li>
  </ul>
<% end %>

<div>
  <%= link_to "Edit this shark", edit_shark_path(@shark) %> |
  <%= link_to "Add post", shark_posts_path(@shark) %> |
  <%= link_to "Back to sharks", sharks_path %>

  <%= button_to "Destroy this shark", @shark, method: :delete %>
</div>
